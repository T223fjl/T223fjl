<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.FlightDao">

	<insert id="addFlight" parameterType="Flight">
	INSERT INTO `test`.`flight` ( `flightNo`, `departureCity`, `departureTime`, `arrivalCity`, `arrivalTime`) 
	VALUES (#{flightNo}, #{departureCity}, #{departureTime}, #{arrivalCity}, #{arrivalTime});
	
	</insert>

	<select id="queryByCityId"  resultType="Flight" >
		select * from Flight where departureCity=#{departureCity} and arrivalCity=#{arrivalCity}
	</select>

</mapper>