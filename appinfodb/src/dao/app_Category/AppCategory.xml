<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.app_Category.AppCategoryDao">
	
	
	<select id="query" resultType="AppCategory">
		SELECT * from app_category 
	</select>
	<select id="queryAppCategory" resultType="AppCategory">
		SELECT * from app_category where parentid =#{parentid}
	</select>
	
	<select id="queryAppCategory1" resultType="AppCategory">
		SELECT * from app_category where parentid is null
	</select>
	<select id="queryAppCategoryByPid" resultType="AppCategory">
		SELECT * from app_category where
			parentid in 
			<foreach collection="list" item="idlist"
			open="(" separator="," close=")">
			#{idlist}
			</foreach>
	</select>
	
</mapper>