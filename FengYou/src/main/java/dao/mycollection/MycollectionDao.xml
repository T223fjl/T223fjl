<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.mycollection.MycollectionDao">

	<!-- 收藏酒店 -->
	<select id="query" resultType="Hotel">
	SELECT a.* FROM hotel a INNER JOIN mycollection b on(a.hotelId=b.hotelById) WHERE b.conbyUserId=#{conbyUserId};
	</select>

	<!-- 添加酒店 -->
	<insert id="add" parameterType="Mycollection">
	INSERT INTO `test`.`mycollection` (`id`, `conbyUserId`, `hotelById`, `hotelByConTime`) 
	VALUES (#{id},#{conbyUserId}, #{hotelById}, #{hotelByConTime});
	</insert>
	
	<!-- 删除酒店 -->
	<delete id="del" parameterType="int">
	DELETE FROM mycollection WHERE hotelById=#{id}
	</delete>

</mapper>