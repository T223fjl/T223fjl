<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.level.LevelDao">
	
	<select id="queryLevelByType" resultType="Level" parameterType="int">
		SELECT * from `level` where type=#{type}
	</select>
	
	<select id="queryLevelByPid" resultType="Level" parameterType="int">
		SELECT * from `level` where parentId=#{pid}
	</select>
	
	<select id="queryLevel" resultType="Level" >
		SELECT * from `level` 
	</select>
	
	<select id="queryByName" resultType="Level" >
	SELECT * FROM `level` WHERE `name` LIKE "%市" LIMIT 6;
	<!-- 	SELECT * FROM `level` WHERE `name` LIKE "%市" ORDER BY RAND() LIMIT 4; -->
	</select>
	
	<select id="query" resultType="Hotel">
	SELECT * FROM hotel WHERE level2=(SELECT id FROM `level` WHERE `name`=#{hotel});
	</select>
	
</mapper>