<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.backend.BackendUserDao">

	<!-- 根据用户名和密码登陆 -->
	<select id="backLogin" parameterType="User" resultType="User">
		select * from
		user where name=#{name} and pwd=#{pwd}
	</select>

	<!-- 根据id查询会员信息 -->
	<select id="getUserInfo" resultType="pojo.User">
		select * from user where
		id=#{id}
	</select>

	<!-- 根据条件查询会员信息 -->
	<select id="getUserlist" resultType="pojo.User">
		select * from user where
		CONCAT(IFNULL(`name`,''),IFNULL(`phone`,'')) LIKE
		'%${name}%'
	</select>

	<!-- 查询总记录数 -->
	<select id="getCount" resultType="Int">
		select count(*) from user
		where
		CONCAT(IFNULL(`name`,''),IFNULL(`phone`,'')) LIKE '%${name}%'
	</select>

	<!-- 根据id修改会员信息 -->
	<update id="updateUser" parameterType="pojo.User">
		update user
		<trim suffix="where id=#{id}" suffixOverrides="," prefix="set">
			<if test="phone != null">phone=#{phone},</if>
			<if test="idcard != null">idcard=#{idcard},</if>
			<if test="sex != null">sex=#{sex},</if>
			<if test="email != null">email=#{email},</if>
			<if test="address != null">address=#{address},</if>
			<if test="status != null">status=#{status},</if>
			<if test="birthday != null">birthday=#{birthday},</if>
		</trim>
	</update>

	<!-- 修改密码 -->
	<update id="updatePwd" parameterType="pojo.User">
		update user set pwd=#{pwd}
		where id=#{id}
	</update>

	<!-- 新增用户 -->
	<insert id="addUser" parameterType="pojo.User">
		INSERT INTO
		user(name,phone,pwd,idcard,sex,email,address,birthday)
		values(#{name},#{phone},#{pwd},#{idcard},#{sex},#{email},#{address},now())
	</insert>

	<!-- 根据id修改会员信息 -->
	<update id="modifyUser" parameterType="pojo.User">
		update user set
		name=#{name},phone=#{phone},idcard=#{idcard},sex=#{sex},email=#{email},address=#{address}
		where id=#{id}
	</update>

	<!-- 注册验证手机是否存在 -->
	<select id="registerByPhone" resultType="Int">
		SELECT count(*) from
		user where phone=#{phone};
	</select>

	<!-- 删除用户信息 -->
	<delete id="delete" parameterType="User">
		delete from user where id=#{id}
	</delete>
	
</mapper>