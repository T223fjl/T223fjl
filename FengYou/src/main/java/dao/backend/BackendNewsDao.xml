<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.backend.BackendNewsDao">

	<!-- 查询资讯列表 -->
	<select id="getUserNews" resultType="Hotel_news">
		select * from hotel_news where CONCAT(IFNULL(`title`,'')) LIKE '%${title}%'
	</select>

</mapper>