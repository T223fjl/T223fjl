<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.backend.BackendLevelDao">

	<!-- 通过type得到level集合 -->
	<select id="queryLevelByType" resultType="Level" parameterType="int">
		SELECT * from `level` where type=#{type}
	</select>

	<!-- 通过父类id得到level集合 -->
	<select id="queryLevelByPid" resultType="Level" parameterType="int">
		SELECT * from `level` where parentId=#{pid}
	</select>

	<!-- 查询所有level -->
	<select id="queryLevel" resultType="Level">
		SELECT * from `level`
	</select>

	<!--未知 -->
	<select id="getLevelParentId" resultType="Level">
		select * from `level`
		<where>
			<if test="parentId != null">
				and parentId = #{parentId}
			</if>
			<if test="parentId == null">
				and parentId =0
			</if>
		</where>
	</select>

	<!-- 根据地址级别查询所有 -->
	<select id="getLevetype1" resultType="Level">
		SELECT * FROM
		`level` WHERE
		type=#{type}
	</select>

</mapper>