<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.developer.DeveloperUserDao">
	
	<!-- 登录 -->
	<select id="login" parameterType="User" resultType="User">
		select * from user where name=#{name} and pwd=#{pwd}
	</select>
	
	<!-- 查询收藏记录  -->
	<select id="queryMycollection" resultType="Mycollection">
		select * from Mycollection 
	</select>
	
	<!-- 注册  -->
	<insert id="Registration" parameterType="User">
		INSERT INTO user(name,phone,pwd,sex,email,status,birthday) VALUES (#{name},#{phone},#{pwd},#{sex},#{email},#{status},#{birthday})
	</insert>
	
	<!-- 用户信息 个人中心 -->
	<select id="getUserInfo" resultType="pojo.User">
	select * from user where id=#{id}
	</select>
	
	<!-- 修改用户信息  个人中心-->
		<update id="updateUser" parameterType="pojo.User">
		update user
	<trim suffix="where id=#{id}" suffixOverrides="," prefix="set">
			<if test="phone != null">phone=#{phone},</if>
			<if test="idcard != null">idcard=#{idcard},</if>
			<if test="sex != null">sex=#{sex},</if>
			<if test="email != null">email=#{email},</if>
			<if test="address != null">address=#{address},</if>
			<if test="status != null">status=#{status},</if>
			<if test="status != null">status=#{status},</if>
			<if test="birthday != null">birthday=#{birthday},</if>
		</trim>
	</update>
	
	<!-- 注册验证手机是否存在 -->
	<select id="registerByPhone" resultType="pojo.User" parameterType="String">
		SELECT * from user where phone=#{phone};
	</select>
	
	<!-- 修改密码 -->
	<update id="updatePwd"  parameterType="pojo.User">
	update user set pwd=#{pwd} where id=#{id}
	</update>
	
	<!-- 查询旅客信息 -->
	<select id="queryBytrip" resultType="pojo.Itrip" >
		SELECT * FROM itrip_user_link_user a
		LEFT JOIN `user` b ON (a.userId=b.id)
		WHERE b.id=#{id}
	</select>
	
	<!-- 删除旅客信息 -->
	<delete id="delete" parameterType="pojo.Itrip">
	delete from itrip_user_link_user where id=#{id}
	</delete>
	
</mapper>